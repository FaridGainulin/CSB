.footer
  // background-image: url('../images/footer-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 20px 0 20px 0
      justify-content space-between
      flex-direction: row
    +above($breakpoints.md)
      padding 30px 0 30px 0
    +above($breakpoints.xxl)
      padding 38px 0 35px 0

  &__text
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 5px
    +above($breakpoints.xxl)
      gap: 8px

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 99px

  &__privacy
    cursor pointer
    text-decoration: underline

  &__privacy-desk
    cursor pointer
    text-decoration: underline
    +above($breakpoints.sm)
      display: none

  &__connection
    display: flex
    justify-content center
    align-items: center
    gap: 5px
    +above($breakpoints.md)
      gap: 7px

  &__connection-icon
    width 20px
    height: 20px
    +above($breakpoints.sm)
      width 24px
      height: 24px
    +above($breakpoints.md)
      width 26px
      height: 26px
    +above($breakpoints.xxl)
      width 30px
      height: 30px
