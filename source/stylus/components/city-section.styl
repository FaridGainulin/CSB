.city-section
  background-color #f1f2f6
  +above($breakpoints.sm)
    background-image: url('../images/city-section-bg.jpg')
    background-repeat: no-repeat
    background-position: calc(50% - -30px) center;
    background-size: cover
  +above($breakpoints.md)
    background-position: center

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 119px 0 118px 0

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    display: flex
    flex-direction: row
    align-items: center
    padding 15px 0 15px 0
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
      padding 18px 0 18px 0
    +above($breakpoints.md)
      gap: 13px
      padding 18px 0 18px 0
    +above($breakpoints.xxl)
      padding 18px 0 18px 0

  &__sub-title-img
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 80px
    +above($breakpoints.md)
      width 110px
    +above($breakpoints.xxl)
      width 130px

  &__form
    position relative
    background-color #fff
    border-radius: 15px
    padding 20px 15px
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      width 300px
      padding 20px 20px 20px 20px
    +above($breakpoints.md)
      width 340px
      gap: 9px
      padding 25px 25px 25px 25px
    +above($breakpoints.xxl)
      padding 28px 25px 29px 25px

  &__form-img
    position: absolute
    width 50px
    height: auto
    right: -70px
    top: 50%
    transform: translateY(-50%)
    +above($breakpoints.sm)
      width 80px
      right: -110px
    +above($breakpoints.md)
      width 100px
      right: -130px
    +above($breakpoints.xxl)
      width 118px
      right: -160px
