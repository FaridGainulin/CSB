.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 80px 0
    +above($breakpoints.md)
      padding 50px 0 100px 0
    +above($breakpoints.xxl)
      padding 60px 0 150px 0

  &__img
    position: absolute
    width: 300px;
    height: auto;
    bottom: 85px;
    left: -130px;
    +above($breakpoints.sm)
      width: 469px;
      bottom: -40px;
      left: -225px;
    +above($breakpoints.md)
      width: 569px;
      bottom: -54px;
      left: -270px;
    +above($breakpoints.xxl)
      width: 769px;
      bottom: -130px;
      left: -370px;

  &__icon
    position: absolute
    width: 90px;
    height: auto;
    top: 41px;
    right: -25px;
    +above($breakpoints.sm)
      width: 150px;
      top: 46px;
      right: -72px;
    +above($breakpoints.md)
      width: 200px;
      top: 62px;
      right: -78px;
    +above($breakpoints.xxl)
      width: 257px;
      top: 68px;
      right: -130px;

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 52px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    gap: 12px
    position relative
    background-color #F4F4F4
    border-radius: 15px
    padding 20px 10px 20px 20px
    +above($breakpoints.sm)
      width 235px !important
      padding 25px 10px 30px 20px
    +above($breakpoints.md)
      width 308px !important
      padding 30px 10px 35px 25px
    +above($breakpoints.xxl)
      width 380px !important
      height: 190px
      padding 35px 10px 44px 38px

  &__card-icon
    position: absolute
    top: 10px
    right: 10px
    width 30px
    height: 30px
    +above($breakpoints.sm)
      top: 15px
      right: 15px
      width 35px
      height: 35px
    +above($breakpoints.md)
      top: 20px
      right: 20px
      width 40px
      height: 40px

  &__bottom
    position relative
    z-index 1
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content flex-end
      padding-top 40px
    +above($breakpoints.md)
      padding-top 55px
    +above($breakpoints.xxl)
      gap: 20px
      padding-top 65px

  &__bottom-text
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: end
      align-items: flex-end
    +above($breakpoints.md)
      gap: 20px

  &__bottom-form
    position relative
    background-color #9BBD88
    border-radius: 15px
    padding 15px
    width 308px
    +above($breakpoints.sm)
      padding 20px 10px 20px 20px
      width 480px
    +above($breakpoints.md)
      width 636px
      padding 25px 10px 25px 25px
    +above($breakpoints.xxl)
      width 780px
      padding 35px 10px 28px 30px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      width 220px
    +above($breakpoints.md)
      width 290px
      gap: 9px

  &__bottom-img
    position: absolute
    width: 120px;
    height: auto;
    top: -34px;
    right: -88px;
    +above($breakpoints.sm)
      width: 309px;
      top: -17px;
      right: -71px;
    +above($breakpoints.md)
      width: 400px;
      top: -34px;
      right: -102px;
    +above($breakpoints.xxl)
      width: 500px;
      top: -52px;
      right: -55px;

