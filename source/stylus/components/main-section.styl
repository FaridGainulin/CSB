.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #f0f0f0

  &__container
    position relative
    padding 0 0 0 0
    +above($breakpoints.sm)
      padding 0 0 120px 0
    +above($breakpoints.md)
      padding 0 0 180px 0
    +above($breakpoints.xxl)
      padding 0 0 242px 0

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 24px 0 15px 0
    +above($breakpoints.md)
      padding 26px 0 15px 0
    +above($breakpoints.xxl)
      padding 30px 0 15px 0

  &__sub-title
    padding-bottom 15px
    display: flex
    flex-direction: row
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__sub-title-img
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 80px
    +above($breakpoints.md)
      width 100px
    +above($breakpoints.xxl)
      width 119px

  &__form
    background-color #fff
    border-radius: 15px
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    padding 20px 15px 20px 15px
    width 308px
    +above($breakpoints.sm)
      padding 25px 20px 25px 20px
    +above($breakpoints.md)
      width 340px
      gap: 9px
      padding 28px 25px 30px 25px
    +above($breakpoints.xxl)
      padding 28px 25px 37px 25px

  &__img
    width 300px
    height: auto
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 740px;
      bottom: 0;
      right: -149px;
    +above($breakpoints.md)
      width: 1100px;
      bottom: 0;
      right: -217px;
    +above($breakpoints.xxl)
      width: 1537px;
      bottom: 0;
      right: -367px;
